{% extends 'base.html.twig' %}

{% block title %}Paiement{% endblock %}

{% block javascript %}
{% endblock %}

{% block body %}
<main class="container m-auto">
  <div class="card p-2 d-flex">
    <div class="card-body">
    <h1>{{title}}</h1>
    {% for item in items %}
      <p>article: {{item.produit.name}}</p>
      <p>Quantité: <span id="quantité">{{item.quantité}}</span></p>
      <p >montant de la commande: <span id="total">{{(total) / 100}}</span> €</p>
    {% endfor %}
      
    </div>
      <div id="smart-button-container">
        <div style="text-align: center;">
          <div id="paypal-button-container"></div>
        </div>
      </div>
  </div>

</main>

{% endblock %}
