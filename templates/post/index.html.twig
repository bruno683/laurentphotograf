{% extends 'base.html.twig' %}

{% block title %}Hello PostController!
{% endblock %}

{% block body %}
	<main>
		<div class="container">
			{% for post in posts %}
				<div class="card rounded shadow-lg p-2">
					<img src="{{asset('upload/post/' ~ post.image)}}" class="card-img-top" alt="image de la carte">
					<div class="card-body">
						<h5 class="card-title">{{post.title}}</h5>
						<p class="card-text">{{post.content}}</p>
						<a href="#" class="btn btn-primary">Lire plus</a>
					</div>
				</div>
			{% endfor %}

		</div>
	</main>
{% endblock %}
